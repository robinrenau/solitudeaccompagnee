{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}


    <!-- Header -->
    <div class="jumbotron background-user " >
        <!-- Mask -->
        <span class="mask bg-gradient-default opacity-8"></span>
        <!-- Header container -->
        <div class="container-fluid d-flex align-items-center">
            <div class="row">
                <div class="col-lg-7 col-md-10">
                    <h5 class="display-4 title-style">Bonjour {{ user.firstname }}</h5>
                    <p class="lead text-user">Ceci est votre page de profil. Vous pouvez ici modifier votre profil, ou encore voir l'historique de vos activités proposées. </p>
                    <a href="#!" class="btn btn-user">Modifier votre profil</a>
                </div>
            </div>
        </div>
    </div>


    <h3>Mes activités proposées</h3>
    <div class="row row-cols-1 row-cols-md-2">

        {% for activity in user.activities %}
            <div class="card " aria-labelledby="event card">
                <div class="card__filter">
                    <img src="{{ asset('uploads/categories/' ~ activity.category.picture) }}" class="card__photo"
                         alt="{{ activity.title }}">
                </div>
                <div class="card__container">
                    <h4 class="card-title">{{ activity.title }}</h4>
                    <time> Créé le : {{ activity.CreatedAt|date ("d/m/Y") }} </time>
                    <p>{{ activity.address }}</p><br>
                    <span class="badge badge-pill badge-primary" title="Catégorie">
                        <i class="fa fa-tag"></i>{{ activity.category.label }}
                    </span><br>
                    <span class="badge badge-pill badge-info" title="Date de l'activité">
                        <i class="fa fa-calendar"></i>
                        {{ activity.eventdate|date('d/m/Y') }}
                    </span>
                    <div class="card__buttons">
                        <a href="{{ path('activity_show', {'id': activity.id} )}}" class="card__buttons btn primary" role="button" aria-haspopup="false">
                            Details
                            <div class="card__fill"></div>
                        </a>

                    </div>
                </div>



            </div>


        {% endfor %}

    </div>

{% endblock %}
