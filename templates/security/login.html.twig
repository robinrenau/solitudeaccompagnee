{% extends 'base_index.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12 col-md-8 col-lg-6 m-auto">

            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h2 style="margin-top: 20px; font-family: Moon">Connexion  </h2>
                <label style="margin-top: 20px" for="inputEmail"><i style="margin-right: 10px" class="fa fa-envelope prefix"></i>Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
                <label style="margin-top: 20px" for="inputPassword"><i style="margin-right: 10px" class="fa fa-lock prefix"></i>Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" required>

                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >




                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir de moi ?
                        </label>
                    </div>


                <button class="btn btn-index" style="margin-top: 10px" type="submit">
                    Se connecter
                </button>
                <a href="{{ path('app_forgot_password_request') }}" class="btn btn-warning btn-rounded" style="margin-top: 10px">Mot de passe oubli√© ?</a>
            </form>
        </div>
    </div>
</div>
{% endblock %}
