{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -
    {{ category.label }}
{% endblock %}

{% block body %}
    <div class="card md-2" style="margin: 30px">
        <div class="row no-gutters">

            <div class="col-md-12">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <img src="{{ asset('uploads/categories/' ~ category.picture) }}" class="card-img"  alt="...">
                        </div>
                        <div class="col-md-9">
                            <h5 class="card-title" style="font-size: 30px">Catégorie {{ category.label }}</h5>
                            <p class="card-text"style="font-size: 20px">Ici, retrouvez toutes les activités qui concernent la catégorie {{ category.label }}.</p>
                        </div>

                    </div>
                </div>
                <div class="card-footer">
                    <p>Toutes les activités dans la catégorie "{{  category.label }}" ({{ category.activities|length }} {% if category.activities|length > 1 %} résultats{% else %} résultat{% endif %})</p>
                </div>
            </div>
        </div>
    </div>



    <!-- News jumbotron -->
    <main class="container">

        <section class="row projects">
            {% for activity in category.activities |sort((a, b) => a.eventdate <=> b.eventdate) %}
                <div class="col-md-6 col-lg-4">
                    {% include 'activity/_card.html.twig' with {'activity': activity} only %}
                </div>
            {% endfor %}
        </section>

    </main>

{% endblock %}
