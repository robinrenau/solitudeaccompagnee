{% extends 'base.html.twig' %}

{% block title %}
    Solitude Accompagnée -
    {{ activity.title }}
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-8 col-detail-activity">
            <h1 class="title-style">{{ activity.title }}</h1>
            <div>

                <span class="badge badge-pill badge-info" title="Date de l'activité">
                    <i class="fa fa-calendar"></i>
                     {{ activity.eventdate|date ('d-m-Y H:i:s') }}
                </span>
                <span class="badge badge-pill badge-warning" title="Catégorie de l'activité">
                    <i class="fa fa-google-wallet"></i>
                    {{ activity.category }}
                </span>
                <span class="badge badge-pill badge-secondary" title="Ville de l'activité">
                    <i class="fa fa-building"></i>
                    {{ activity.city.label }}
                </span>
            </div><br>
            <h5>Description de l'activité :</h5>
            <p>{{ activity.description }}</p>

            <h5>Adresse et/ou lieu de l'activité :</h5>
            <p>{{ activity.address }}</p>

            <h5>Contact :</h5>
            <p>Nom de l'hôte : {{ activity.user.firstname }} {{ activity.user.lastname }}</p>
            <p>Email de l'hôte : {{ activity.user.email }}</p>



        </div>
        <div class="col-md-4">
            <img src="{{ asset('uploads/cities/' ~ activity.city.picture) }}" alt="{{ activity.title }}"
                 class="img-fluid img-activity">
            <span class="js-label">Participer ? </span>

            <a href="{{ path('activity_participation', {'id':activity.id}) }}" class="btn btn-home btn-participation js-participation">
                {% if app.user and activity.participateByUser(app.user) %}
                    <i class=" fa fa-times-circle"></i>

                {% else %}
                    <i class="fa fa-check-circle">  </i>
                {% endif %}
                <span class="js-participations"> </span>

            </a>

            {% if app.user != activity.user %}

            {% else %}
                <ul class="title-style">Liste des participants</ul>
                {% for participation in activity.participations %}
                    <li class="js-user">{{ participation.user.firstname }} {{ participation.user.lastname }}</li>
                     Contact : {{ participation.user.email }}
                {% endfor %}

            {% endif %}
        </div>

    </div>

    <hr>

    <a class="btn btn-lg btn-home" href="{{ path('comment_new') }}" role="button">
        <i class="fa fa-book"></i>
        Ajouter un commentaire
    </a>

    <section class="list-group mt-4">

        {% for comment in activity.comments %}
            <article class="list-group-item">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">{{ comment.title }}</h5>
                    <small>{{ comment.createdAt|date ("m/d/Y") }}</small>
                </div>
                <p class="mb-1"></p>
                <small>{{ comment.content }}</small>
            </article>
        {% endfor %}


    </section>
{% endblock %}
