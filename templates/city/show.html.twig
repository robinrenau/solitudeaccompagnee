{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -
    {{ city.name }}
{% endblock %}

{% block body %}
    <main class="container">
        <h2 style="font-family:'Roboto';margin-top: 20px" >Toutes les activités à {{  city.label }} ({{ city.activities|length }} {% if city.activities|length > 1 %} résultats{% else %} résultat{% endif %})</h2>

        <section class="row projects">
            {% for activity in city.activities %}
                <div class="col-md-4">
                    {% include 'activity/_card.html.twig' with {'activity': activity} only %}
                </div>
            {% endfor %}
        </section>

    </main>

{% endblock %}
